  "item": [
    {
      "name": "Create Incident",
      "id": "SNOWCreatedIncident",
      "request": {
        "auth": {
          "type": "basic",
          "basic": [
            {
              "key": "password",
              "value": "{{password}}",
              "type": "string"
            },
            {
              "key": "username",
              "value": "{{username}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Accept",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Accept-Charset",
            "value": "UTF-8",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n\t\"short_description\": \"Intel Automation opens this Incident\",\n\t\"description\": \"Real description\",\n    \"contact_type\": \"email\",\n\t\"caller_id\": "${airwatch.device.device_enrollment_user_name}",\n\t\"category\": \"inquiry\",\n    \"subcategory\": \"email\",\n\t\"impact\": \"2\",\n\t\"urgency\": \"2\",\n    \"cmdb_ci\":  "${airwatch.device._device_hostname}\" ,\n    \"Work_notes\": \"This Incident was automatically generated by Omnissa Intelligence\",\n    \"assignment_group\": \"MY Assignemt Group\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "https://{{instance_base_url}}/api/now/table/incident",
          "protocol": "https",
          "host": [
            "{{instance_base_url}}"
          ],
          "path": [
            "api",
            "now",
            "table",
            "incident"
          ]
        },
        "description": "Submits a new incident into the ServiceNow system"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "instance_base_url",
      "value": "xxxx.service-now.com"
    },
    {
      "key": "username",
      "value": "username"
    },
    {
      "key": "password",
      "value": "password"
    }
  ]
